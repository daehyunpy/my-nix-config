{
  "agent": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-3-7-sonnet-thinking-latest"
    },
    "version": "2"
  },
  "wrap_guides": [72, 79],
  "vim_mode": true,
  "relative_line_numbers": true,
  "ui_font_size": 15,
  "buffer_font_size": 12,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "languages": {
    "Python": {
      "language_servers": ["!pyright", "ruff", "..."],
      "code_actions_on_format": {
        "source.fixAll.ruff": true,
        "source.organizeImports.ruff": true
      }
    },
    "Nix": {
      "language_servers": ["!nil", "nixd", "..."]
    }
  },
  "lsp": {
    "nil": {
      "initialization_options": {
        "formatting": {
          "command": ["nixfmt"]
        }
      }
    }
  },
  "ssh_connections": [],
  "telemetry": {
    "metrics": false
  }
}
