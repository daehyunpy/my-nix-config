{
  "agent": {
    "default_profile": "write",
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-thinking-latest"
    },
    "version": "2"
  },
  "wrap_guides": [72, 79],
  "vim_mode": true,
  "relative_line_numbers": true,
  "ui_font_size": 15,
  "buffer_font_size": 12,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "languages": {
    "Python": {
      "language_servers": ["ruff", "..."],
      "code_actions_on_format": {
        "source.fixAll.ruff": true,
        "source.organizeImports.ruff": true
      }
    },
    "SQL": {
      "tab_size": 2
    }
  },
  "lsp": {
    "nil": {
      "initialization_options": {
        "formatting": {
          "command": ["nixfmt"]
        }
      }
    }
  },
  "ssh_connections": [
    {
      "host": "octo61",
      "projects": []
    },
    {
      "host": "octo61",
      "username": "trino",
      "projects": [
        {
          "paths": ["/home/trino/deploy"]
        }
      ],
      "nickname": "trino@octo61"
    }
  ],
  "telemetry": {
    "metrics": false
  }
}
